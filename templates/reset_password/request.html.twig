{% extends 'base.html.twig' %}

{% block title %}RÃ©initialiser votre mot de passe - EventHub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        
        .reset-container {
            background: #f8f9fa;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: 2rem 1rem;
        }
        
        .reset-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(30px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 30px;
            padding: 3rem;
            width: 100%;
            max-width: 500px;
            box-shadow: 
                0 30px 80px rgba(0, 0, 0, 0.2),
                0 15px 40px rgba(102, 126, 234, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.6);
            position: relative;
            z-index: 10;
            animation: cardAppear 1s ease-out;
            overflow: hidden;
        }
        
        .reset-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            border-radius: 30px 30px 0 0;
        }
        
        .reset-card::after {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            border-radius: 32px;
            z-index: -1;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .reset-card:hover::after {
            opacity: 0.3;
        }
        
        @keyframes cardAppear {
            from {
                opacity: 0;
                transform: translateY(50px) scale(0.9);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }
        
        .brand-header {
            text-align: center;
            margin-bottom: 2.5rem;
            position: relative;
        }
        
        .reset-icon {
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 25px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: white;
            font-size: 2.5rem;
            box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
            animation: iconFloat 4s ease-in-out infinite, iconPulse 3s ease-in-out infinite;
            position: relative;
            overflow: hidden;
        }
        
        .reset-icon::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            transition: all 0.3s ease;
            transform: translate(-50%, -50%);
        }
        
        .reset-icon:hover::before {
            width: 120px;
            height: 120px;
        }
        
        @keyframes iconFloat {
            0%, 100% { transform: translateY(0px) scale(1); }
            50% { transform: translateY(-12px) scale(1.03); }
        }
        
        @keyframes iconPulse {
            0%, 100% { box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4); }
            50% { box-shadow: 0 20px 50px rgba(102, 126, 234, 0.6); }
        }
        
        .reset-title {
            font-size: 2.3rem;
            font-weight: 900;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 0 0 1rem 0;
            animation: titleShine 3s ease-in-out infinite alternate;
        }
        
        .reset-subtitle {
            color: #6c757d;
            font-size: 1rem;
            font-weight: 500;
            margin: 0 0 0.5rem 0;
            opacity: 0.9;
            line-height: 1.6;
        }
        
        @keyframes titleShine {
            0% { filter: brightness(1); }
            100% { filter: brightness(1.2) drop-shadow(0 0 10px rgba(102, 126, 234, 0.3)); }
        }
        
        .form-group {
            position: relative;
            margin-bottom: 2rem;
        }
        
        .form-label {
            display: block;
            color: #495057;
            font-weight: 600;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .input-wrapper {
            position: relative;
            overflow: hidden;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(102, 126, 234, 0.2);
            transition: all 0.3s ease;
        }
        
        .input-wrapper:focus-within {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
            background: rgba(255, 255, 255, 0.95);
        }
        
        .input-wrapper::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
            transition: left 0.6s ease;
        }
        
        .input-wrapper:focus-within::before {
            left: 100%;
        }
        
        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
            font-size: 1.1rem;
            z-index: 2;
            transition: all 0.3s ease;
        }
        
        .input-wrapper:focus-within .input-icon {
            color: #667eea;
            transform: translateY(-50%) scale(1.1);
        }
        
        .form-input {
            width: 100%;
            padding: 1rem 1rem 1rem 3rem;
            border: none;
            background: transparent;
            font-size: 1rem;
            color: #495057;
            outline: none;
            position: relative;
            z-index: 2;
        }
        
        .form-input::placeholder {
            color: #adb5bd;
            transition: all 0.3s ease;
        }
        
        .form-input:focus::placeholder {
            color: transparent;
        }
        
        .submit-button {
            width: 100%;
            padding: 1.3rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 15px;
            color: white;
            font-size: 1.1rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            overflow: hidden;
            margin-bottom: 1.5rem;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }
        
        .submit-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
            transition: left 0.3s ease;
        }
        
        .submit-button:hover::before {
            left: 100%;
        }
        
        .submit-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 20px 40px rgba(102, 126, 234, 0.5);
        }
        
        .submit-button:active {
            transform: translateY(-1px);
        }
        
        .submit-button:disabled {
            opacity: 0.7;
            transform: none !important;
            cursor: not-allowed;
        }
        
        .back-to-login {
            text-align: center;
            margin-top: 1rem;
        }
        
        .back-link {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .back-link::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 50%;
            width: 0;
            height: 2px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transition: all 0.3s ease;
            transform: translateX(-50%);
        }
        
        .back-link:hover {
            color: #764ba2;
            text-decoration: none;
            transform: translateX(-3px);
        }
        
        .back-link:hover::after {
            width: 100%;
        }
        
        .error-message {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 15px;
            margin-bottom: 1.5rem;
            text-align: center;
            font-weight: 500;
            animation: errorSlideIn 0.5s ease-out;
            box-shadow: 0 10px 30px rgba(255, 107, 107, 0.3);
            position: relative;
            overflow: hidden;
        }
        
        .error-message::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            animation: errorShimmer 2s ease-in-out infinite;
        }
        
        @keyframes errorSlideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @keyframes errorShimmer {
            0% { left: -100%; }
            100% { left: 100%; }
        }
        
        .success-message {
            background: linear-gradient(135deg, #56ab2f 0%, #a8edea 100%);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 15px;
            margin-bottom: 1.5rem;
            text-align: center;
            font-weight: 500;
            animation: successBounce 0.6s ease-out;
            box-shadow: 0 10px 30px rgba(86, 171, 47, 0.3);
        }
        
        @keyframes successBounce {
            0% { transform: scale(0.3); opacity: 0; }
            50% { transform: scale(1.05); }
            70% { transform: scale(0.9); }
            100% { transform: scale(1); opacity: 1; }
        }
        
        .info-box {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
            border: 1px solid rgba(102, 126, 234, 0.2);
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }
        
        .info-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .info-box-content {
            margin-left: 1rem;
        }
        
        .info-box-icon {
            color: #667eea;
            font-size: 1.2rem;
            margin-right: 0.5rem;
        }
        
        .info-box-text {
            color: #495057;
            margin: 0;
            line-height: 1.6;
        }
        
        @media (max-width: 768px) {
            .reset-container {
                padding: 1rem;
            }
            
            .reset-card {
                padding: 2rem 1.5rem;
                border-radius: 25px;
            }
            
            .reset-title {
                font-size: 1.9rem;
            }
            
            .reset-icon {
                width: 70px;
                height: 70px;
                font-size: 2rem;
            }
            
            .submit-button {
                padding: 1.1rem;
            }
        }
        
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(102, 126, 234, 0.9);
            backdrop-filter: blur(10px);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }
        
        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid rgba(255, 255, 255, 0.3);
            border-top: 4px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .form-error {
            color: #dc3545;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="reset-container">
        <!-- Overlay de chargement -->
        <div class="loading-overlay" id="loadingOverlay">
            <div class="loading-spinner"></div>
        </div>
        
        <div class="reset-card">
            <!-- En-tÃªte avec icÃ´ne -->
            <div class="brand-header">
                <div class="reset-icon">
                    <i class="fas fa-key"></i>
                </div>
                <h1 class="reset-title">Mot de passe oubliÃ© ?</h1>
                <p class="reset-subtitle">Pas de souci ! Entrez votre adresse email et nous vous enverrons un lien sÃ©curisÃ© pour rÃ©initialiser votre mot de passe.</p>
            </div>
            
            <!-- Box d'information -->
            <div class="info-box">
                <div class="info-box-content">
                    <i class="info-box-icon fas fa-info-circle"></i>
                    <p class="info-box-text">
                        Vous recevrez un email contenant un lien de rÃ©initialisation valable pendant 1 heure.
                    </p>
                </div>
            </div>
            
            <!-- Messages d'erreur -->
                        {% for flash_error in app.flashes('reset_password_error') %}
                <div class="error-message">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                                {{ flash_error }}
                            </div>
                        {% endfor %}

            <!-- Messages de succÃ¨s -->
            {% for flash_success in app.flashes('reset_password_success') %}
                <div class="success-message">
                    <i class="fas fa-check-circle me-2"></i>
                    {{ flash_success }}
                </div>
            {% endfor %}
            
            <!-- Formulaire de rÃ©initialisation -->
            {{ form_start(requestForm, {'attr': {'id': 'resetForm', 'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    <label for="{{ requestForm.email.vars.id }}" class="form-label">
                        <i class="fas fa-envelope me-1"></i>
                        Adresse Email
                                </label>
                    <div class="input-wrapper">
                        <i class="input-icon fas fa-envelope"></i>
                                    {{ form_widget(requestForm.email, {
                                        'attr': {
                                'class': 'form-input',
                                'placeholder': 'Entrez votre adresse email',
                                'autocomplete': 'email'
                                        }
                                    }) }}
                                </div>
                    {% if form_errors(requestForm.email) %}
                        <div class="form-error">
                            <i class="fas fa-exclamation-circle"></i>
                                    {{ form_errors(requestForm.email) }}
                                </div>
                    {% endif %}
                            </div>

                <button type="submit" class="submit-button" id="submitButton">
                    <i class="fas fa-paper-plane me-2"></i>
                                    Envoyer le lien de rÃ©initialisation
                                </button>
                
                <div class="back-to-login">
                    <a href="{{ path('app_login') }}" class="back-link">
                        <i class="fas fa-arrow-left"></i>
                                    Retour Ã  la connexion
                                </a>
                            </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation d'entrÃ©e
            const card = document.querySelector('.reset-card');
            setTimeout(() => {
                card.style.animation = 'cardAppear 1s ease-out forwards';
            }, 100);
            
            // Focus automatique sur le champ email
            const emailInput = document.querySelector('input[type="email"]');
            if (emailInput) {
                emailInput.focus();
            }
            
            // Animation des champs au focus
            const inputs = document.querySelectorAll('.form-input');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'translateY(-2px)';
                });
                
                input.addEventListener('blur', function() {
                    if (!this.value) {
                        this.parentElement.style.transform = 'translateY(0)';
                    }
                });
            });
            
            // Gestion du formulaire avec animation de chargement
            const form = document.getElementById('resetForm');
            const submitButton = document.getElementById('submitButton');
            const loadingOverlay = document.getElementById('loadingOverlay');
            
            form.addEventListener('submit', function(e) {
                // Validation cÃ´tÃ© client
                const emailInput = form.querySelector('input[type="email"]');
                if (!emailInput.value || !isValidEmail(emailInput.value)) {
                    e.preventDefault();
                    showError('Veuillez entrer une adresse email valide.');
                    return;
                }
                
                // Afficher l'overlay de chargement
                loadingOverlay.style.display = 'flex';
                
                // Animation du bouton
                submitButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Envoi en cours...';
                submitButton.disabled = true;
            });
            
            // Validation email
            function isValidEmail(email) {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return emailRegex.test(email);
            }
            
            // Afficher erreur
            function showError(message) {
                const existingError = document.querySelector('.dynamic-error');
                if (existingError) {
                    existingError.remove();
                }
                
                const errorDiv = document.createElement('div');
                errorDiv.className = 'error-message dynamic-error';
                errorDiv.innerHTML = `<i class="fas fa-exclamation-triangle me-2"></i>${message}`;
                
                const formGroup = document.querySelector('.form-group');
                formGroup.parentNode.insertBefore(errorDiv, formGroup);
                
                // Suppression automatique aprÃ¨s 5 secondes
                setTimeout(() => {
                    if (errorDiv.parentNode) {
                        errorDiv.remove();
                    }
                }, 5000);
            }
            
            // Effet de particules au clic
            document.addEventListener('click', function(e) {
                if (e.target.closest('.submit-button') || e.target.closest('.reset-icon')) {
                    createParticles(e.pageX, e.pageY);
                }
            });
            
            function createParticles(x, y) {
                for (let i = 0; i < 6; i++) {
                    const particle = document.createElement('div');
                    particle.style.cssText = `
                        position: absolute;
                        width: 8px;
                        height: 8px;
                        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                        border-radius: 50%;
                        pointer-events: none;
                        z-index: 1000;
                        left: ${x}px;
                        top: ${y}px;
                    `;
                    
                    document.body.appendChild(particle);
                    
                    const angle = (Math.PI * 2 * i) / 6;
                    const distance = 60 + Math.random() * 40;
                    
                    particle.animate([
                        {
                            transform: 'translate(0, 0) scale(1)',
                            opacity: 1
                        },
                        {
                            transform: `translate(${Math.cos(angle) * distance}px, ${Math.sin(angle) * distance}px) scale(0)`,
                            opacity: 0
                        }
                    ], {
                        duration: 900,
                        easing: 'ease-out'
                    }).onfinish = () => particle.remove();
                }
            }
            
            // Animation automatique de suppression des messages aprÃ¨s 8 secondes
            setTimeout(() => {
                const messages = document.querySelectorAll('.error-message, .success-message');
                messages.forEach(message => {
                    message.style.animation = 'fadeOut 0.5s ease-out forwards';
                    setTimeout(() => message.remove(), 500);
                });
            }, 8000);
        });
        
        // Animation fadeOut
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeOut {
                from { opacity: 1; transform: translateY(0); }
                to { opacity: 0; transform: translateY(-20px); }
            }
        `;
        document.head.appendChild(style);
    </script>
{% endblock %}
