            transform: translateX(-30px);
        }

        .animate-fade-left.animate {
            opacity: 1;
            transform: translateX(0);
            transition: all 0.6s ease;
        }

        .animate-fade-right {
            opacity: 0;
            transform: translateX(30px);
        }

        .animate-fade-right.animate {
            opacity: 1;
            transform: translateX(0);
            transition: all 0.6s ease;
        }
