{% extends 'base.html.twig' %}

{% block title %}Liste des invitations{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des invitations</h1>
        
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Invitations envoyées</span>
                <a href="{{ path('invitation_new') }}" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus"></i> Nouvelle invitation
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Email</th>
                                <th>Statut</th>
                                <th>Date d'envoi</th>
                                <th>Expire le</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for invitation in invitations %}
                            <tr>
                                <td>{{ invitation.email }}</td>
                                <td>
                                    {% if invitation.status == 'accepted' %}
                                        <span class="badge bg-success">Accepté</span>
                                    {% elseif invitation.status == 'declined' %}
                                        <span class="badge bg-danger">Refusé</span>
                                    {% else %}
                                        <span class="badge bg-warning">En attente</span>
                                    {% endif %}
                                </td>
                                <td>{{ invitation.createdAt|date('d/m/Y H:i') }}</td>
                                <td>{{ invitation.expiresAt|date('d/m/Y H:i') }}</td>
                                <td>
                                    <a href="{{ path('invitation_respond', {'token': invitation.token, 'response': 'accepted'}) }}" 
                                       class="btn btn-sm btn-outline-success" target="_blank">
                                        <i class="fas fa-check"></i> Lien acceptation
                                    </a>
                                    <a href="{{ path('invitation_respond', {'token': invitation.token, 'response': 'declined'}) }}" 
                                       class="btn btn-sm btn-outline-danger mt-1" target="_blank">
                                        <i class="fas fa-times"></i> Lien refus
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Aucune invitation trouvée</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}