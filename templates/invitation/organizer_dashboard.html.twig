{% extends 'base.html.twig' %}

{% block title %}Suivi des Invitations{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2>Invitations pour l'événement : {{ event.title }}</h2>

        <table class="table table-striped mt-4">
            <thead>
            <tr>
                <th>Participant</th>
                <th>Email</th>
                <th>Statut</th>
                <th>Répondu le</th>
                <th>Actions</th> <!-- Nouvelle colonne pour les actions -->
            </tr>
            </thead>
            <tbody>
            {% for invitation in invitations %}
                <tr>
                    <td>{{ invitation.participant.fullName }}</td>
                    <td>{{ invitation.email }}</td>
                    <td>
                        {% if invitation.status.value == 'accepted' %}
                            <span class="badge bg-success">Acceptée</span>
                        {% elseif invitation.status.value == 'declined' %}
                            <span class="badge bg-danger">Refusée</span>
                        {% else %}
                            <span class="badge bg-warning text-dark">En attente</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if invitation.respondedAt %}
                            {{ invitation.respondedAt|date('d/m/Y H:i') }}
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        {% if invitation.status.value != 'cancelled' %} 
                            <!-- Formulaire d'annulation seulement si l'invitation n'est pas déjà annulée -->
                            <form method="post" action="{{ path('invitation_cancel', {id: invitation.id}) }}" 
                                onsubmit="return confirm('Êtes-vous sûr ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invitation.id) }}">
                                <button class="btn btn-danger btn-sm">Annuler</button>
                            </form>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
