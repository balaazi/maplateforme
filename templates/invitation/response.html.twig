{# templates/invitation/response.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Réponse à l'invitation{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-body text-center">
                {% if response == 'accepted' %}
                    <h2 class="text-success">
                        <i class="fas fa-check-circle"></i>
                        Invitation acceptée
                    </h2>
                    <p>Vous avez accepté l'invitation à l'événement : <strong>{{ invitation.event.title }}</strong></p>
                {% else %}
                    <h2 class="text-danger">
                        <i class="fas fa-times-circle"></i>
                        Invitation refusée
                    </h2>
                    <p>Vous avez refusé l'invitation à l'événement : <strong>{{ invitation.event.title }}</strong></p>
                {% endif %}

                {% if isNewUser is defined and isNewUser %}
                    <div class="alert alert-info mt-4">
                        <h4><i class="fas fa-user-plus"></i> Bienvenue !</h4>
                        <p>Un compte a été créé pour vous. Veuillez vérifier votre email pour obtenir vos identifiants de connexion.</p>
            </div>
                {% endif %}

                <div class="mt-4">
                    <a href="{{ path('event_list') }}" class="btn btn-primary">
                        <i class="fas fa-calendar"></i> Voir mes événements
                    </a>
            </div>
            </div>
            </div>
    </div>
{% endblock %}
