{# templates/invitation/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Gestion des invitations{% endblock %}

{% block body %}
    <h1>Gestion des invitations</h1>
    
    <a href="{{ path('invitation_new') }}" class="btn btn-primary">Nouvelle invitation</a>
    
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invitation in invitations %}
            <tr>
                <td>{{ invitation.name }}</td>
                <td>{{ invitation.email }}</td>
                <td>
                    {% if invitation.status == 'pending' %}
                        <span class="badge bg-warning">En attente</span>
                    {% elseif invitation.status == 'accepted' %}
                        <span class="badge bg-success">Accepté</span>
                    {% else %}
                        <span class="badge bg-danger">Refusé</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('invitation_edit', {'id': invitation.id}) }}" class="btn btn-sm btn-secondary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune invitation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}