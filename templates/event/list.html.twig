{% extends 'base.html.twig' %}

{% block title %}Liste des √âv√©nements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            color: #343a40;
            margin-bottom: 30px;
        }

        table {
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .alert {
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <h1>Liste des √âv√©nements</h1>

        <!-- üîΩ Bouton Cr√©er un √âv√©nement -->
        <div class="mb-4 text-end">
            <a href="{{ path('event_create') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Cr√©er un √âv√©nement
            </a>
        </div>

        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-dark">
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Lieu</th>
                <th>Date et Heure</th>
                <th>Dur√©e</th>
                <th>Cat√©gorie</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.title }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.lieu }}</td>
                    <td>{{ event.dateHeure|date('d/m/Y H:i') }}</td>
                    <td>{{ event.duree }}</td>
                    <td>{{ event.category }}</td>
                    <td>
                        <a href="{{ path('event_edit', { id: event.id }) }}" class="btn btn-sm btn-warning me-2">
                            <i class="bi bi-pencil-square"></i> Modifier
                        </a>
                        <a href="{{ path('event_cancel', { id: event.id }) }}" class="btn btn-sm btn-danger">
                            <i class="bi bi-x-circle"></i> Annuler
                        </a>
                        <!-- Lien pour g√©rer les invitations -->
                        <a href="{{ path('invitation_index', { eventId: event.id }) }}" class="btn btn-sm btn-info text-white">
                            <i class="bi bi-envelope-paper"></i> G√©rer les invitations
                        </a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Aucun √©v√©nement trouv√©.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
