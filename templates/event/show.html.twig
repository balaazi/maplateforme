{% extends 'base.html.twig' %}

{% block title %}{{ event.title }} - D√©tails de l'√©v√©nement{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .event-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .event-header {
        border-bottom: 2px solid #f3f4f6;
        padding-bottom: 1rem;
        margin-bottom: 2rem;
    }

    .event-title {
        font-size: 2rem;
        color: #1a202c;
        margin-bottom: 0.5rem;
    }

    .event-meta {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .meta-item {
        background: #f8fafc;
        padding: 1rem;
        border-radius: 8px;
        border-left: 4px solid #4f46e5;
    }

    .meta-label {
        font-size: 0.875rem;
        color: #64748b;
        margin-bottom: 0.25rem;
    }

    .meta-value {
        font-size: 1rem;
        color: #1e293b;
        font-weight: 500;
    }

    .event-description {
        background: #f8fafc;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
        white-space: pre-line;
    }

    .tools-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .tool-card {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 1rem;
        text-align: center;
        transition: all 0.3s ease;
    }

    .tool-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .tool-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        color: #4f46e5;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: flex-end;
        margin-top: 2rem;
    }

    .btn-edit {
        background: #4f46e5;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-edit:hover {
        background: #4338ca;
    }

    .btn-cancel {
        background: #ef4444;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-cancel:hover {
        background: #dc2626;
    }
</style>
{% endblock %}

{% block body %}
<div class="event-container">
    <div class="event-header">
        <h1 class="event-title">{{ event.title }}</h1>
        {% if event.status %}
            <span class="badge {% if event.status == 'annul√©' %}bg-danger{% else %}bg-success{% endif %}">
                {{ event.status|capitalize }}
            </span>
        {% endif %}
    </div>

    <div class="event-meta">
        <div class="meta-item">
            <div class="meta-label">Date et heure</div>
            <div class="meta-value">{{ event.dateHeure|date('d/m/Y H:i') }}</div>
        </div>
        <div class="meta-item">
            <div class="meta-label">Dur√©e</div>
            <div class="meta-value">{{ event.duree }} minutes</div>
        </div>
        <div class="meta-item">
            <div class="meta-label">Lieu</div>
            <div class="meta-value">{{ event.lieu }}</div>
        </div>
        <div class="meta-item">
            <div class="meta-label">Cat√©gorie</div>
            <div class="meta-value">{{ event.category }}</div>
        </div>
    </div>

    {% if event.description %}
    <div class="event-description">
        <h3>Description</h3>
        {{ event.description|nl2br }}
    </div>
    {% endif %}

    <div class="tools-section">
        {% if event.googleDriveUrl %}
        <a href="{{ event.googleDriveUrl }}" target="_blank" class="tool-card">
            <div class="tool-icon">üìÅ</div>
            <h4>Google Drive</h4>
            <p>Acc√©der aux documents partag√©s</p>
        </a>
        {% endif %}

        <a href="{{ path('app_collaborative_notes_list', {'id': event.id}) }}" class="tool-card">
            <div class="tool-icon">üìã</div>
            <h4>Notes Collaboratives</h4>
            <p>G√©rer les notes de l'√©v√©nement</p>
        </a>

        {% if event.etherpadUrl %}
        <a href="{{ event.etherpadUrl }}" target="_blank" class="tool-card">
            <div class="tool-icon">üìù</div>
            <h4>Etherpad</h4>
            <p>Notes collaboratives</p>
        </a>
        {% endif %}

        <a href="{{ path('event_attendance', {'id': event.id}) }}" class="tool-card">
            <div class="tool-icon">üë•</div>
            <h4>Participants</h4>
            <p>Voir les pr√©sences</p>
        </a>
    </div>

    {% if isOrganizer %}
    <div class="action-buttons">
        <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn-edit">
            <i class="fas fa-edit"></i> Modifier
        </a>
        {% if event.status != 'annul√©' %}
            <a href="{{ path('event_cancel', {'id': event.id}) }}" class="btn-cancel" 
               onclick="return confirm('√ätes-vous s√ªr de vouloir annuler cet √©v√©nement ?')">
                <i class="fas fa-times"></i> Annuler
            </a>
        {% endif %}
    </div>
    {% endif %}
</div>
{% endblock %}
