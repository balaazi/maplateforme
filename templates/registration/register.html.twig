{% extends 'base.html.twig' %}

{% block title %}Créer un utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow rounded-3 p-4">
                    <div class="card-body">
                        <h2 class="text-center mb-5 text-2xl font-bold">Créer un utilisateur</h2>

                        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                        {% for champ in [form.email, form.password, form.nom, form.prenom, form.telephone, form.specialite, form.departement, form.societe, form.dateNaissance, form.photoFile, form.roles] %}
                            <div class="mb-4">
                                {{ form_label(champ, null, {'label_attr': {'class': 'form-label font-semibold'}}) }}
                                {{ form_widget(champ, {'attr': {'class': 'form-control border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                                {{ form_errors(champ) }}
                            </div>
                        {% endfor %}

                        <div class="d-flex justify-content-between mt-5">
                            <a href="{{ path('home') }}" class="btn btn-secondary px-4 py-2 rounded-lg shadow">Retour</a>
                            <button type="submit" class="btn btn-primary px-4 py-2 rounded-lg shadow">Enregistrer</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
