{% extends 'base.html.twig' %}

{% block title %}Agenda Partag√©{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div>
        {# Flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="agenda-container">
        <h1>üóìÔ∏è Agenda Partag√©</h1>

        <div class="mb-3">
            <a href="{{ path('event_create') }}" class="btn btn-primary">
                + Ajouter un √©v√©nement
            </a>
            <!-- Ajouter le bouton de synchronisation ici -->
            <a href="{{ path('calendar_sync') }}" class="btn btn-success ms-2">
                üîÑ Synchroniser l‚Äôagenda
            </a>
        </div>

        <div id="calendar"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.4/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const calendarEl = document.getElementById('calendar');

            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'fr',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: '/api/events',
            });

            calendar.render();
        });
    </script>
{% endblock %}
