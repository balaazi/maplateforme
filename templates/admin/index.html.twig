{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container py-5">
        <h2 class="mb-4 text-primary">Gestion des Utilisateurs</h2>
        
        <div class="d-flex justify-content-between mb-3">
            <!-- Bouton de connexion -->
            <form action="{{ path('_logout_main') }}" method="post">
                <button type="submit" class="btn btn-danger">connexion</button>
            </form>
            
            <a href="{{ path('admin_invite') }}" class="btn btn-success">Inviter un Participant</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Email</th>
                        <th>RÃ´le</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles|join(', ') }}</td>
                            <td class="text-center">
                                <a href="{{ path('admin_edit', {id: user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                <a href="{{ path('admin_delete', {id: user.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Supprimer cet utilisateur ?');">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
